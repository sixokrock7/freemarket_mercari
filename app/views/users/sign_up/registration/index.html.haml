.single-contaner
  = render 'shared/single_header'

  .single-main
    .signup-panel__sign-up
      %h2 会員情報入力

    .signup-panel__inner
      .signup-panel__contents
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          .form_group
            %label{ for: 'nickname' } ニックネーム
            %span.form-require 必須
            = f.text_field :nickname, class: "input-default input-with-margin"
          .form_group
            %label{ for: 'nickname' } メールアドレス
            %span.form-require 必須
            = f.text_field :email, class: "input-default input-with-margin"
            .form_group
            %label{ for: 'nickname' } パスワード
            %span.form-require 必須
            = f.text_field :password, class: "input-default input-with-margin"
            .form_group
            %label{ for: 'nickname' } パスワード（確認）
            %span.form-require 必須
            = f.text_field :password_confirmation, autocomplete: "off", class: "input-default input-with-margin"
          = f.submit "次へ進む", class: "login-submit"

  = render "shared/single_footer"
