.singlecontainer
  = render 'shared/single_header'

  .single-main
    .signup-panel
      .signup-panel__signup
        %h2 会員情報入力

      .signup-panel__inner
        .signup-panel__contents
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            .form-group
              %label{ for: "nickname" } お名前
              %span.form-require 必須
              = f.text_field :nickname, class: "input-default input-with-margin"
              .form-group
              %label{ for: "nickname" } お名前カナ
              %span.form-require 必須
              = f.text_field :email, class: "input-default input-with-margin"
              .form-group
              %label{ for: "nickname" } 郵便番号
              %span.form-require 必須
              = f.text_field :password, class: "input-default input-with-margin"
              .form-group
              %label{ for: "nickname" } 都道府県
              %span.form-require 必須
              = f.text_field :password_confirmation, class: "input-default input-with-margin"
              .form-group
              %label{ for: "nickname" } 市区町村
              %span.form-require 必須
              = f.text_field :password, class: "input-default input-with-margin"
              .form-group
              %label{ for: "nickname" } 番地
              %span.form-require 必須
              = f.text_field :password, class: "input-default input-with-margin"
              .form-group
              %label{ for: "nickname" } 建物
              %span.form-require 任意
              = f.text_field :password, class: "input-default input-with-margin"
              .form-group
              %label{ for: "nickname" } 電話
              %span.form-require 任意
              = f.text_field :password, class: "input-default input-with-margin"
            = f.submit "次へ進む", class: "login-submit"

  = render "shared/single_footer"

